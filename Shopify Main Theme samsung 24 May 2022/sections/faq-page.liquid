<div class=""> 
  <div class="generic-content">
  <h1 class="heading">{{page.title}}</h1>
  
<div class="cgt-desc">

    <div class="accordian-show" >
      {%- for block in section.blocks -%}
                  <div class="product__accordion accordion" {{ block.shopify_attributes }}>
              <details>
                <summary>
                  <div class="summary__title">                
                    <h2 class="h4 accordion__title sub-heading">
                      {{ block.settings.tab_name }}
                    </h2>
                  </div>    
                  {% render 'icon-caret' %}
                </summary>
                <div class="accordion__content rte">
                  <p>{{ block.settings.tab_content }}</p>
                  
                </div>
              </details>
            </div>
      {% endfor %}
    </div>
 </div>
    </div>
</div>

{% schema %}
  {
    "name": "accordian",
"class": "accordian-section",
    "settings": [],
"blocks": [
     {
      "type": "accordian",  	  
      "name": "accordian",
      "settings": [
          {
          "type": "text",
          "id": "tab_name",
          "default": "Tab Name",
          "label": "Tab Name"
          },
		{
			"type" :"richtext",
			"id" : "tab_content",
			"label" : "Tab Content"
		}
      ]
      }
],
  "presets": [
    {
      "name": "accordian"
    }
  ]
  }
{% endschema %}

<style>
  details[open] svg.icon.icon-caret {
    transform: rotateZ(
-180deg);
}
  summary .icon-caret {
    transition: all 0.4s;
    height: 0.8rem;
 }
 .accordian-section{
 padding-bottom:20px;
 } 
  .product__accordion{
 margin-bottom: 10px;
    }
  .generic-content .sub-heading{
  font-size:20px;
    max-width: 90%;
  }
  .generic-content .accordion__content{
      max-width: 90%;
  }
  
  @media only screen and (max-width: 767px){
  .generic-content .sub-heading {
 line-height:32px;
}
  
  }  
</style>