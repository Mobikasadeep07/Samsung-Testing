"blocks": [
  {
    "type": "slider",
    "name": "Slider",
    "settings": [
      {
        "id": "banner_img",
        "type": "image_picker",
        "label": "Slider Image Desktop"
      },
       {
        "id": "banner_img1",
        "type": "image_picker",
        "label": "Slider Image Mobile"
      }
    ]
  }
],
"presets": [
  {
    "name": "Slideshow"
  }
]
}
{% endschema %}

