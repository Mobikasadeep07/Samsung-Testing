{% schema %}
  {
    "name": "Main Search Fridge",
    "settings": [
       

        {
        "id": "title",
        "type": "text",
        "label": "Heading"
        },
        {
        "id": "title1",
        "type": "text",
        "label": "Sub Heading", 
        "default" : "Refine your search by part type"
        },
