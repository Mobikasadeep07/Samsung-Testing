        }   

    ],
    "blocks": [
  {
    "type": "slider",
    "name": "Slider",
    "settings": [
      {
        "id": "banner_img",
        "type": "image_picker",
        "label": "Slider Image"
      },
      {
      "id": "image_sub_title",
      "type": "text",
      "label": "Name ", 
      "default" : "Name"
      } 
    ]
  }
]
  }
{% endschema %}

{% stylesheet %}
.carousel-search-diagrams .items-inner {
    margin: 8px;
 text-align:center;
}
.carousel-search-diagrams .slick-arrow {
    width: 15px;
    height: 26px;
}
.carousel-search-diagrams .slick-arrow:before{
display:none
}
.carousel-search-diagrams .slick-arrow {
    background-image: url(https://cdn.shopify.com/s/files/1/0601/8488/7543/files/arrow-right.png?v=1640847533);
   background-repeat: no-repeat;
}
.carousel-search-diagrams button.slick-prev.slick-arrow {
    transform: rotate(180deg);
}

{% endstylesheet %}

